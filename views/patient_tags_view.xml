<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	 <!--form view of the patient model-->
    <record id="patient_tags_form" model="ir.ui.view">
        <field name="name">hospital.patient.tags.form</field>
        <field name="model">hospital.patient.tags</field>
        <field name="arch" type="xml">
            <form string="Patients Tag">
	            <sheet>
		            <group>
			            <field name="name" string="Name"/>
			            <field name="active" invisible="1"/>
		            </group>
	            </sheet>
	            
	            <div class="oe_chatter">
		            <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
	            </div>
            </form>
        </field>
    </record>
	
	<!--tree view of the patient model-->
    <record id="patient_tags_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree sample="1">
	            <field name="name" string="Name"/>
	            <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>
	
	
	<!--search view of the patient model-->
    <record id="patient_tags_search" model="ir.ui.view">
        <field name="name">hospital.patient.tags.search</field>
        <field name="model">hospital.patient.tags</field>
        <field name="arch" type="xml">
            <search>
	            <field name="name" string="Name"/>
            </search>
        </field>
    </record>
	
	<!-- 	Action For All Patient Tags-->
	<record id="action_hospital_patient_tags" model="ir.actions.act_window">
		<field name="name">Patient Tags</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">hospital.patient.tags</field>
		<field name="view_mode">tree,form</field>
		<field name="context">{}</field>
		<field name="help" type="html">
			<p class="o_view_nocontent_smiling_face">
				Create Your First Patient Tag!
			</p>
		</field>
	</record>
	
	<!-- 	Menu For All Patient Tags-->
	<menuitem id="menu_all_patient_tags"
	          name="Patients Tags"
	          action="action_hospital_patient_tags"
	          parent="menu_configurations"
	          sequence="0"/>
	
</odoo>